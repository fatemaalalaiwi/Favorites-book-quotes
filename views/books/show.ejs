<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>A listing in <%= books.city %></h1>

<h2>Favorites</h2>
<p>Favorited by <%= myBook.favoritedByUser.length %> people.</p>

<% if(userHasFavorited) { %>
    <p>You've favorited this listing!</p>
    <form action="/books/<%= myBook._id %>/favorited-by/<%= user._id %>?_method=DELETE" method="POST">
      <button type="submit">Unfavorite It!</button>
    </form>
  <% } else { %>
    <p>You havn't favorited this listing</p>
    <form action="/books/<%= myBook._id %>/favorited-by/<%= user._id %>" method="POST">
        <button type="submit">Favorite It!</button>
      </form>
  <% } %>








  <h2>Quotes</h2>
  <p>Favorite quotes: <%= myBook.bookQuotes %> </p>
  <p> Add by: $<%= myBook.owner.username  %></p>
  

 
     

  <h2>Owner</h2>
  <% if (myBook.owner._id.equals(user._id)) { %>
    <p>This is your quotes!</p>
    <a href="/books/<%= myBook._id %>/edit">Edit this page</a>
    <form action="/books/<%= myBook._id %>?_method=DELETE" method="POST">
      <button type="submit">Delete this page</button>
    </form>
    
  <% } else { %>
    <p>This is not your quote, <%= myBook.owner.username %> does!</p>
  <% } %>
</body>






